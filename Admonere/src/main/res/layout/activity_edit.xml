<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.conrad.admonere.EditActivity">

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="@drawable/roundedbutton"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Set Reminder"
        android:textColorLink="#FFC300"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="411dp"
        android:layout_marginRight="22dp"
        android:layout_marginEnd="22dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/sendBtn"
        android:layout_alignBottom="@+id/sendBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:background="@drawable/roundedbutton"
        android:clickable="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="Delete"
        android:textColorLink="#FFC300"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="100dp" />

    <EditText
        android:id="@+id/datePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Choose Date"
        android:inputType="date"
        android:textColorLink="#FFC300" />

    <EditText
        android:id="@+id/timePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Choose Time"
        android:inputType="time"
        android:textColorLink="#FFC300"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/datePick"
        android:layout_alignStart="@+id/datePick" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Choose Contact"
        android:inputType="phone"
        android:textColorLink="#FFC300"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/message" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Message"
        android:inputType="textMultiLine"
        android:textColorLink="#FFC300"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/sendBtn"
        android:layout_alignStart="@+id/timePick" />


</RelativeLayout>
