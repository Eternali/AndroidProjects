<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fa11en.notifications.MainActivity">

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="58dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="@drawable/roundedbutton"
        android:text="Set Reminder"
        android:textColorLink="#FFC300"
        tools:layout_editor_absoluteX="113dp"
        tools:layout_editor_absoluteY="411dp" />

    <EditText
        android:id="@+id/datePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Choose Date"
        android:inputType="date" />

    <EditText
        android:id="@+id/timePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/datePick"
        android:layout_alignRight="@+id/datePick"
        android:layout_below="@+id/datePick"
        android:layout_marginTop="37dp"
        android:ems="10"
        android:hint="Choose Time"
        android:inputType="time" />

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/timePick"
        android:layout_alignRight="@+id/timePick"
        android:layout_below="@+id/timePick"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/phoneNumber"
        android:layout_alignRight="@+id/phoneNumber"
        android:layout_below="@+id/phoneNumber"
        android:layout_marginTop="39dp"
        android:ems="10"
        android:hint="Message"
        android:inputType="textPersonName" />

</RelativeLayout>
