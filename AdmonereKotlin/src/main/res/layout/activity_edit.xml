<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.example.conrad.admonere.EditActivity">

    <EditText
        android:id="@+id/datePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/choose_date"
        android:inputType="date"
        android:gravity="center"
        android:textAlignment="center"
        android:textColorLink="#FFC300" />

    <EditText
        android:id="@+id/timePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/choose_time"
        android:inputType="time"
        android:gravity="center"
        android:textAlignment="center"
        android:textColorLink="#FFC300" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_below="@+id/timePick"
        android:gravity="center">
        <TextView
            android:id="@+id/freqLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mx_remind_reps"
            android:textSize="20sp"
            android:layout_marginEnd="5dp" />

        <EditText
            android:id="@+id/maxFreq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="2"
            android:inputType="number"
            android:text="1"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/dayLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/day"
            android:textSize="20sp"
            android:layout_marginStart="5dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:id="@+id/sunBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Sun"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/monBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Mon"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/tueBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Tue"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/wedBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Wed"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/thuBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Thu"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/friBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Fri"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />

        <Button
            android:id="@+id/satBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:clickable="true"
            android:fontFamily="monospace"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:layout_margin="5dp"
            android:padding="7dp"
            android:text="Sat"
            android:textColor="?btnText"
            android:textColorLink="#FFC300" />
    </LinearLayout>

    <EditText
        android:id="@+id/phoneNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:clickable="true"
        android:ems="10"
        android:focusable="false"
        android:hint="@string/choose_contact"
        android:inputType="phone"
        android:gravity="center"
        android:textAlignment="center"
        android:textColorLink="#FFC300" />

    <EditText
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/message"
        android:inputType="textMultiLine"
        android:gravity="center"
        android:textAlignment="center"
        android:textColorLink="#FFC300" />

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/sendBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_reminder"
            android:textColor="?btnText"
            android:textColorLink="#FFC300"
            android:background="@drawable/roundedbutton"
            android:layout_margin="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintLeft_toRightOf="@+id/backBtn"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete"
            android:textColor="?btnText"
            android:textColorLink="#FFC300"
            android:background="@drawable/roundedbutton"
            android:layout_margin="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/sendBtn"
            app:layout_constraintHorizontal_chainStyle="spread" />
    </android.support.constraint.ConstraintLayout>

</LinearLayout>

